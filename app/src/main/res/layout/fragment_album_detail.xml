        android:layout_margin="@dimen/default_offset"
        tools:listitem="@layout/item_album_detail"
        tools:itemCount="10"
        app:spanCount="@integer/album_columns_count"
        app:layoutManager="androidx.recyclerview.widget.GridLayoutManager"/>
