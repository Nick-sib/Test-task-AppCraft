<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <ImageView
        android:id="@+id/ivAlbumImage"
        android:layout_width="@dimen/recycler_item_image_size"
        android:layout_height="@dimen/recycler_item_image_size"
        android:src="@drawable/ic_none_image"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        android:contentDescription="@string/image_def_description"/>

    <TextView
        android:id="@+id/tvAlbumTitle"
        style="@style/recycler_item_text_dark"

        app:layout_constraintStart_toEndOf="@+id/ivAlbumImage"
        app:layout_constraintTop_toTopOf="parent"
        tools:text="Text text text" />

</androidx.constraintlayout.widget.ConstraintLayout>